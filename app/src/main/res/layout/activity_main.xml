<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mainHeadingView"
        android:layout_width="346dp"
        android:layout_height="58dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/holo_blue_bright"
        android:elegantTextHeight="false"
        android:text="Currency Converter"
        android:textAlignment="center"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="35sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/inDollar"
        android:layout_width="274dp"
        android:layout_height="58dp"
        android:layout_marginBottom="236dp"
        android:ems="10"
        android:hint="Enter dollars"
        android:inputType="textPersonName"
        android:text="Name"
        android:textAlignment="viewStart"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/Changer"
        android:layout_width="105dp"
        android:layout_height="53dp"
        android:onClick="changeToRupees"
        android:text="Change"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inDollar"
        app:layout_constraintVertical_bias="0.308" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="295dp"
        android:layout_height="257dp"
        app:layout_constraintBottom_toTopOf="@+id/inDollar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainHeadingView"
        app:srcCompat="@drawable/acurrency" />

</androidx.constraintlayout.widget.ConstraintLayout>